<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.LoginController">
 <children>
      <VBox layoutX="250.0" layoutY="150.0" AnchorPane.leftAnchor="220.0" AnchorPane.topAnchor="120.0">
         <children>
          <TextField fx:id="userNameField" alignment="TOP_CENTER" promptText="username">
               <VBox.margin>
                  <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
               </VBox.margin></TextField>
          <PasswordField fx:id="passwordField" alignment="TOP_CENTER" promptText="password">
               <VBox.margin>
                  <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
               </VBox.margin></PasswordField>
          <Button fx:id="login" alignment="CENTER" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" prefHeight="27.0" prefWidth="93.0" text="Login" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
               <VBox.margin>
                  <Insets bottom="10.0" left="40.0" top="10.0" />
               </VBox.margin></Button>
         </children>
         <padding>
            <Insets top="5.0" />
         </padding>
      </VBox>
      <HBox spacing="20.0" AnchorPane.leftAnchor="5.0" AnchorPane.topAnchor="350.0">
         <children>
            <Button fx:id="signUp" mnemonicParsing="false" style="-fx-background-color: #27F915; -fx-text-fill: #ffffff; -fx-font-weight: 700;" text="Sign Up" />
            <Button fx:id="guestAccess" defaultButton="true" mnemonicParsing="false" text="Enter as Guest">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin></Button>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
 </children>
</AnchorPane>
